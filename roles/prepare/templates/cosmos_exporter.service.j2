[Unit]
Description=Cosmos Exporter
After=network-online.target

[Service]
User=cosmos_exporter
TimeoutStartSec=0
CPUWeight=95
IOWeight=95
ExecStart=cosmos-exporter --bech-prefix {{ bech_prefix }} --denom {{ denom }} --denom-coefficient {{ denom_coefficient }}
Restart=always
RestartSec=2
LimitNOFILE=800000
KillSignal=SIGTERM

[Install]
WantedBy=multi-user.target
